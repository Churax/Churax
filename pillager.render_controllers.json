{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.pillager_base": {
      "arrays": {
        "textures": {
          "Array.skins": [
            "Texture.pase",
            "Texture.pase2",
            "Texture.pase3",
            "Texture.pase4",
            "Texture.pase5",
            "Texture.pase6"
          ]
        }
      },
      "geometry": "Geometry.default",
      "materials": [
        { "*": "Material.default" }
      ],
      "textures": [
        "Array.skins[query.skin_id]"
      ]
    },
    "controller.render.pillager_masked": {
      "arrays": {
        "textures": {
          "Array.biomes": [ 
            "Texture.plainsp",
            "Texture.desertp",
            "Texture.junglep",
            "Texture.savannap",
            "Texture.snowp",
            "Texture.swampp",
            "Texture.taigap"
          ]
        }
      },
      "geometry": "Geometry.default",
      "materials": [
        { "*": "Material.default : Material.masked" }
      ],
      "textures": [
        "Array.biomes[query.mark_variant]"
          ]
        }
      }
    }
  }
}
